<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/iv"
                android:scaleType="fitXY"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:src="@mipmap/chang"
                android:layout_marginTop="24dp"
                android:layout_gravity="center"
                android:layout_width="340dp"
                android:layout_height="219dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="33dp"
                        android:layout_marginTop="202dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/group" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="47dp"
                        android:layout_marginTop="200dp"
                        android:text="支持204"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:scaleType="fitXY"
                        android:src="@mipmap/renminbigerenzhongxin"
                        android:layout_marginTop="202dp"
                        android:layout_marginLeft="133dp"
                        android:layout_gravity="center"
                        android:layout_width="10dp"
                        android:layout_height="10dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="148dp"
                        android:layout_marginTop="200dp"
                        android:textSize="10sp"
                        android:text="已筹47,462"
                        android:textColor="#FFFFFF"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:scaleType="fitXY"
                        android:src="@mipmap/xiaoshuai"
                        android:layout_marginTop="202dp"
                        android:layout_marginLeft="256dp"
                        android:layout_gravity="center"
                        android:layout_width="10dp"
                        android:layout_height="10dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="270dp"
                        android:layout_marginTop="200dp"
                        android:textSize="10sp"
                        android:text="达成158%"
                        android:textColor="#FFFFFF"
                        />
                    <ProgressBar
                        android:id="@+id/progress_bar_h"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="313dp"
                        android:layout_marginLeft="31dp"
                        android:layout_marginTop="220dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:max="100"
                        android:progress="62"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="果蔬脆 蔬菜可以当零食吃"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:layout_marginLeft="27dp"
                        android:layout_marginTop="253dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="保留果蔬95%营养成分! 随地轻松补充1"
                        android:textColor="#999999"
                        android:textSize="13sp"
                        android:layout_marginLeft="27dp"
                        android:layout_marginTop="283dp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:descendantFocusability="blocksDescendants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_evaluation_s"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
