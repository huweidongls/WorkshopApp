<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    tools:context="com.jingna.workshopapp.page.CommissionActivity">
    <RelativeLayout
        android:id="@+id/rl_top"
        style="@style/rl_top_bar">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <ImageView style="@style/iv_top_back" />
        </RelativeLayout>
        <TextView
            style="@style/tv_top_title"
            android:text="提佣金"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="333dp"
        android:background="#FFFFFF"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="到账银行卡"
            android:textSize="14sp"
            android:textColor="#232325"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="19dp"
            />
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="117dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/nyyh"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="农业银行 (1234）"
            android:textSize="14sp"
            android:textColor="#232325"
            android:gravity="center"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="19dp"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/path"
            android:scaleType="fitEnd"
            android:layout_marginRight="28dp"
            android:layout_marginTop="22dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2小时内到账"
            android:textColor="#232325"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_margin="45dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提现金额"
            android:textSize="14sp"
            android:textColor="#232325"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="101dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textSize="36sp"
            android:textColor="#232325"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="117dp"
            />
        <EditText
            android:id="@+id/money"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="70dp"
            android:background="@null"
            android:textSize="45sp"
            android:layout_marginTop="118dp"
            />
        <TextView
            android:layout_width="285dp"
            android:layout_height="1dp"
            android:background="#979797"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="170dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="佣金余额¥1277，"
            android:textSize="13sp"
            android:textColor="#232325"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="190dp"
            />
        <TextView
            android:id="@+id/all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="全部提现"
            android:textSize="13sp"
            android:textColor="#5876B5"
            android:layout_marginLeft="131dp"
            android:layout_marginTop="190dp"
            />
        <Button
            android:id="@+id/btn_mone"
            android:layout_width="285dp"
            android:layout_height="47dp"
            android:text="提现"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:background="#9CE6BF"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="220dp"
            />
    </RelativeLayout>
</LinearLayout>
