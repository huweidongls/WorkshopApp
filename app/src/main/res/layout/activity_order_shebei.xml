<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_ffffff"
    tools:context="com.jingna.workshopapp.page.OrderShebeiActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@mipmap/back_b"
                android:layout_width="9dp"
                android:layout_height="16dp" />

        </RelativeLayout>

        <TextView
            android:layout_centerInParent="true"
            android:textColor="@color/black_333333"
            android:textSize="18sp"
            android:text="下单"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/black_333333"
                android:textSize="16sp"
                android:text="生产工期"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
            <LinearLayout
                android:layout_marginTop="11dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="32dp">

                <TextView
                    android:id="@+id/tv_start"
                    android:background="@drawable/bg_f5f5f5_16dp"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textColor="#BFBFC4"
                    android:text="请选择"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <View
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center_vertical"
                    android:background="#000000"
                    android:layout_width="11dp"
                    android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/tv_end"
                    android:background="@drawable/bg_f5f5f5_16dp"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textColor="#BFBFC4"
                    android:text="请选择"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginTop="27dp"
                android:textColor="@color/black_333333"
                android:textSize="16sp"
                android:text="配套设备"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:textSize="15sp"
                        android:textColor="#7D7D81"
                        android:text="设备名称"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_centerInParent="true"
                        android:textColor="#7D7D81"
                        android:textSize="15sp"
                        android:text="设备价格"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginRight="28dp"
                        android:layout_alignParentRight="true"
                        android:textColor="#7D7D81"
                        android:textSize="15sp"
                        android:text="数量"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <View
                    android:background="#DCDCDC"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:descendantFocusability="blocksDescendants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
                
            </LinearLayout>

            <Button
                android:id="@+id/btn_insert"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
                android:layout_marginTop="25dp"
                android:textColor="@color/white_ffffff"
                android:textSize="15sp"
                android:text="+ 添加设备"
                android:background="#02C160"
                android:layout_width="111dp"
                android:layout_height="41dp" />

        </LinearLayout>

    </ScrollView>

    <View
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_reset"
            android:gravity="center"
            android:textColor="#AAAAAA"
            android:textSize="16sp"
            android:text="重置"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:gravity="center"
            android:background="#02C160"
            android:textColor="@color/white_ffffff"
            android:text="确定"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>
