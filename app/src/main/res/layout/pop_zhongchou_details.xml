<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="443dp"
    android:orientation="vertical"
    android:background="@color/white_ffffff">

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="18dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_pop"
                    android:layout_marginLeft="20dp"
                    android:src="@color/black_333333"
                    android:layout_width="80dp"
                    android:layout_height="85dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_title"
                        android:textColor="@color/black_333333"
                        android:textSize="14sp"
                        android:ellipsize="end"
                        android:lines="4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginTop="7dp"
                        android:textColor="#999999"
                        android:textSize="11sp"
                        android:text="剩余数量134"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:textSize="14sp"
                android:textColor="@color/black_333333"
                android:text="档位"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:descendantFocusability="blocksDescendants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_dangwei"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginTop="33dp"
                android:textSize="14sp"
                android:textColor="@color/black_333333"
                android:text="数量"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_jian"
                    android:text="-"
                    android:textColor="@color/black_333333"
                    android:textSize="12sp"
                    android:background="#F4F4F4"
                    android:gravity="center"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />

                <TextView
                    android:id="@+id/tv_num"
                    android:background="#F4F4F4"
                    android:gravity="center"
                    android:textColor="@color/black_333333"
                    android:textSize="12sp"
                    android:text="1"
                    android:layout_marginLeft="4dp"
                    android:layout_width="57dp"
                    android:layout_height="32dp" />

                <TextView
                    android:id="@+id/tv_jia"
                    android:text="+"
                    android:textColor="@color/black_333333"
                    android:textSize="12sp"
                    android:background="#F4F4F4"
                    android:gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center_vertical"
                    android:src="#D5D5D5"
                    android:layout_width="4dp"
                    android:layout_height="4dp" />

                <TextView
                    android:id="@+id/tv_yunfei"
                    android:textColor="@color/black_333333"
                    android:textSize="12sp"
                    android:layout_marginLeft="4dp"
                    android:text="配送运费：免运费"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="30dp"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center_vertical"
                    android:src="#D5D5D5"
                    android:layout_width="4dp"
                    android:layout_height="4dp" />

                <TextView
                    android:id="@+id/tv_fahuo"
                    android:textColor="@color/black_333333"
                    android:textSize="12sp"
                    android:layout_marginLeft="4dp"
                    android:text="预计发货时间：众筹成功后30天"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/white_ffffff"
        android:text="去支持"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="55dp" />

</LinearLayout>
